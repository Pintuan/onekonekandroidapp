<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color"
    tools:context=".AccountSettings">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:background="#0FFFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:elevation="10dp"/>

    <ImageButton
        android:id="@+id/backBttn_AccountSettings"
        android:layout_width="33sp"
        android:layout_height="33sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="18dp"
        android:background="@drawable/ic_roundback"
        android:contentDescription="@string/app_name"
        android:onClick="OpenHome_PageBack"
        android:scaleType="fitCenter"
        tools:ignore="ImageContrastCheck,OnClick,UsingOnClickInXml,TouchTargetSizeCheck" />


    <TextView
        android:id="@+id/imageView6"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="20sp"
        android:layout_marginStart="100sp"
        android:layout_marginEnd="100sp"
        android:gravity="center"
        android:text="Account Settings"
        android:textColor="#1975AE"
        android:textSize="21sp"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <!--
        <Switch
            android:id="@+id/switcher"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_marginStart="340sp"
            android:layout_marginTop="15sp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
        -->
    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="70sp"
        android:layout_marginStart="150sp"
        android:layout_marginEnd="150sp"
        android:src="@drawable/ic_accsettings"
        tools:ignore="ContentDescription,ImageContrastCheck" />


    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginStart="75sp"
        android:layout_marginEnd="60sp"
        android:layout_marginBottom="455sp"
        android:text="Name"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/accountNumber"
        android:layout_width="210dp"
        android:layout_height="30sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="215dp"
        android:layout_marginStart="100sp"
        android:layout_marginEnd="100sp"
        android:background="@drawable/corner_stroke_blue"
        android:gravity="center"
        android:text=""
        android:textSize="22sp"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <ImageView
        android:layout_width="35sp"
        android:layout_height="35sp"
        app:srcCompat="@drawable/ic_accinfo"
        android:layout_marginTop="275dp"
        android:layout_marginStart="28sp"
        android:layout_marginEnd="100sp"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="285dp"
        android:layout_marginStart="75sp"
        android:layout_marginEnd="60sp"
        android:layout_marginBottom="455sp"
        android:text="Personal Info"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/editPersonalInfo"
        android:layout_width="18sp"
        android:layout_height="18sp"
        app:srcCompat="@drawable/ic_edit"
        android:layout_marginTop="285dp"
        android:layout_marginStart="190sp"
        android:layout_marginEnd="100sp"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="162sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/corner_solidgray"
        android:orientation="vertical"
        android:padding="10sp"
        tools:ignore="TextSizeCheck"
        android:elevation="10dp">


        <!-- New Email-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:layout_marginStart="5dp"
            android:text="Email:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/newEmail"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="55dp"
            android:text=""
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/newEmailbttn"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_right_arrow"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="1sp"
            android:background="@android:color/black" /> -->


        <!-- New Mobile Number-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="65dp"
            android:text="Mobile Number:"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/email"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="60dp"
            android:text=""
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/ic_right_arrow"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="1sp"
            android:background="@android:color/black" /> -->


        <!-- Birthday-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="115dp"
            android:text="Birthday:"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/newBirthday"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="110dp"
            android:text=""
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/ic_right_arrow"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputemail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:hint=""
            android:textSize="15dp"
            android:enabled="false"
            android:maxLength="20"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputmobilenum"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="127dp"
            android:layout_marginTop="55dp"
            android:hint=""
            android:textSize="15dp"
            android:enabled="false"
            android:maxLength="11"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputbday"
            android:layout_width="232dp"
            android:layout_height="45dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="100dp"
            android:hint=""
            android:textSize="15dp"
            android:enabled="false"
            android:maxLength="10"/>

    </FrameLayout>

    <ImageView
        android:layout_width="35sp"
        android:layout_height="35sp"
        app:srcCompat="@drawable/ic_billingaddress"
        android:layout_marginTop="510dp"
        android:layout_marginStart="28sp"
        android:layout_marginEnd="100sp"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginStart="75sp"
        android:layout_marginEnd="60sp"
        android:text="Billing Address"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/editBillingAddress"
        android:layout_width="18sp"
        android:layout_height="18sp"
        app:srcCompat="@drawable/ic_edit"
        android:layout_marginTop="520dp"
        android:layout_marginStart="205sp"
        android:layout_marginEnd="100sp"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="54sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="555dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="29sp"
        android:background="@drawable/corner_solidgray"
        android:padding="15sp"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textColor="#455A64"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/address"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:text=""
            android:textColor="#455A64"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_right_arrow"
            tools:ignore="SpeakableTextPresentCheck" />

    </FrameLayout>

    <ImageView
        android:layout_width="35sp"
        android:layout_height="35sp"
        app:srcCompat="@drawable/ic_accpass"
        android:layout_marginTop="640dp"
        android:layout_marginStart="28sp"
        android:layout_marginEnd="100sp"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="645dp"
        android:layout_marginStart="75sp"
        android:layout_marginEnd="60sp"
        android:layout_marginBottom="455sp"
        android:text="Account Password"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        tools:ignore="HardcodedText" />


    <ImageView
        android:id="@+id/editPass"
        android:layout_width="18sp"
        android:layout_height="18sp"
        app:srcCompat="@drawable/ic_edit"
        android:layout_marginTop="645dp"
        android:layout_marginStart="235sp"
        android:layout_marginEnd="100sp"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/savechangesBttn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="750dp"
        android:layout_marginEnd="80dp"
        android:onClick="savingchanges"
        android:background="@drawable/corner_solidgray"
        android:text="Save Changes"
        tools:ignore="OnClick"
        android:elevation="10dp"/>



</RelativeLayout>