<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayNow">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0FFFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:elevation="10dp">

    </FrameLayout>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="33sp"
        android:layout_height="33sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="18dp"
        android:background="@drawable/ic_roundback"
        android:contentDescription="@string/app_name"
        tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />


    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="18dp"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="115dp"
        android:gravity="center"
        android:text="@string/paynow"
        android:textColor="#1975AE"
        android:textSize="21sp"
        android:textStyle="bold"
        tools:ignore="SpUsage,TextSizeCheck" />

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/corner_solidgray"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount_to_pay"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_strokebl_solidwh"
            android:orientation="horizontal"
            android:padding="5dp">


            <TextView
                android:id="@+id/amount"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="22sp"
                tools:ignore="Autofill,HardcodedText,InefficientWeight,VisualLintTextFieldSize,SpeakableTextPresentCheck" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Account Number:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_strokebl_solidwh"
            android:orientation="horizontal"
            android:padding="5dp">


            <TextView
                android:id="@+id/accountNumber"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black"
                android:textSize="22sp"
                tools:ignore="Autofill,HardcodedText,InefficientWeight,VisualLintTextFieldSize" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/corner_solidgray"
        android:elevation="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:text="Bill Details"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#000000"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="860dp"
                android:layout_marginStart="15dp"
                android:text="Bill Details"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#000000">

        </TextView>
        </LinearLayout>
    </ScrollView>
    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="550dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/corner_solidgray"
        android:padding="10dp"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mode_of_payment"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="VisualLintOverlap,VisualLintBounds" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment,VisualLintBounds">

            <LinearLayout
                android:id="@+id/paymongoOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                tools:ignore="UseCompoundDrawables,VisualLintBounds,DuplicateSpeakableTextCheck">


                <ImageButton
                    android:id="@+id/paymongo"
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:background="@drawable/corner_strokebl_solidwh"
                    android:contentDescription="@string/paymongo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/paymongo"
                    android:elevation="5dp"
                    tools:ignore="VisualLintBounds" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/paymongoo"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="VisualLintBounds" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/xenditOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp"
                tools:ignore="UseCompoundDrawables,VisualLintBounds">

                <ImageButton
                    android:id="@+id/xendit"
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="@drawable/corner_strokebl_solidwh"
                    android:contentDescription="@string/paymongopic"
                    android:src="@drawable/xendit"
                    android:elevation="5dp"
                    tools:ignore="VisualLintBounds" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Xendit"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText,VisualLintBounds" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="395dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="18dp"
        android:background="#0FFFFFFF"
        android:orientation="horizontal"
        android:paddingVertical="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Amount to Pay:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="₱"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/amountToPay"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/payNowButton"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="250dp"
            android:background="@drawable/corner_solidblue"
            android:text="PAY NOW"
            android:textColor="@color/white"
            android:onClick="OpenPayment"
            android:elevation="7dp"
            tools:ignore="HardcodedText,UsingOnClickInXml" />



    </FrameLayout>




</RelativeLayout>