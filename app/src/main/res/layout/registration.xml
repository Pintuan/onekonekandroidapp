<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    tools:context=".RegistrationForm">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0FFFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backBttn_ApplicationForm"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/ic_roundback"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:text="@string/application_form"
        android:textColor="#1975AE"
        android:textSize="21sp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

    <ScrollView
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="158dp"
            android:layout_marginStart="200dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/onekonek_logo"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="215dp"
            android:layout_height="88dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="90dp"
            android:text="@string/please_provide_your_basic_information_location_and_the_plan_you_wish_to_subscribe_to_if_you_agree_to_our_privacy_policy_please_check_the_box_below"
            android:textSize="13sp"
            tools:ignore="VisualLintLongText" />

        <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:text="@string/basic_information"
        android:textColor="#257FC6"
        android:textSize="23sp"
        android:textStyle="bold" />


<!-- firstname -->
        <EditText
            android:id="@+id/fname"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="@string/first_name"
            android:padding="15dp"
            android:textColor="#455A64"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />


<!-- Middle name -->
        <EditText
            android:id="@+id/mname"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="Middle Name *"
            android:padding="15dp"
            android:textColor="#455A64"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,HardcodedText,TextFields" />


<!-- Last name -->
        <EditText
            android:id="@+id/lname"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="Last Name *"
            android:padding="15dp"
            android:textColor="#455A64"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,HardcodedText,TextFields" />


<!-- Mother's maiden name -->
        <EditText
            android:id="@+id/maidenName"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="Mother's Maiden Name *"
            android:padding="15dp"
            android:textColor="#455A64"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,HardcodedText,TextFields" />


<!-- Birthday -->
        <EditText
            android:id="@+id/birthday"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="480dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="mm/dd/yyyy *"
            android:padding="15dp"
            android:textColor="#455A64"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,HardcodedText,TextFields" />


<!-- Mobile number -->
        <EditText
            android:id="@+id/mobileNumber"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="Mobile Number *"
            android:padding="15dp"
            android:textColor="#455A64"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,HardcodedText,TextFields" />


<!-- email -->
        <EditText
            android:id="@+id/email"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="620dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="Email *"
            android:padding="15dp"
            android:textColor="#455A64"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,HardcodedText,TextFields" />


<!-- address -->
        <EditText
            android:id="@+id/address"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="690dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:drawablePadding="20dp"
            android:hint="Address *"
            android:padding="15dp"
            android:textColor="#455A64"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="765dp"
            android:layout_marginStart="30dp"
            android:text="Same as billing address?"
            android:textSize="16dp"/>


        <CheckBox
            android:id="@+id/addressCheckBox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="753dp"
            android:layout_marginStart="343dp"
            android:layout_marginEnd="25dp"
            tools:ignore="TextSizeCheck" />

<!-- billing address -->
        <EditText
            android:id="@+id/billingAddress"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="810dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="Billing Address *"
            android:padding="15dp"
            android:textColor="#455A64"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />


<!-- Nearest landmark -->
        <EditText
            android:id="@+id/landmark"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="880dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/corner_solidgray"
            android:hint="Nearest Landmark *"
            android:padding="15dp"
            android:textColor="#455A64"
            android:textColorHint="#455A64"
            tools:ignore="Autofill,TextFields" />


        <TextView
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="950dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="212dp"
            android:text="@string/select_plan"
            android:textSize="25sp"
            android:textColor="#257FC6"
            android:textStyle="bold" />


<!-- Plans -->
            <FrameLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1000dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/corner_solidgray"
                tools:ignore="UselessParent">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_plan2"
                    app:hintEnabled="true">

                <Spinner
                    android:id="@+id/plan"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:padding="10dp"
                    tools:ignore="MissingConstraints" />
            </com.google.android.material.textfield.TextInputLayout>

        </FrameLayout>

        <CheckBox
            android:id="@+id/privacypolicyCheckBox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="1070dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            tools:ignore="TextSizeCheck" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1083dp"
            android:layout_marginStart="61dp"
            android:text="I agree in                           , which I have read and understood."
            android:textColor="#455A64">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1083dp"
            android:layout_marginStart="127dp"
            android:text="Privacy Policy"
            android:textColor="#1975AE">

        </TextView>

        <Button
            android:id="@+id/submit_application"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="1145dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="16dp"
            android:text="@string/submit_application"
            android:textColor="#FFFDFD"
            android:background="@drawable/corner_solidblue"
            android:onClick="OpenApplicationForm"
            tools:ignore="OnClick,UsingOnClickInXml" />

    </FrameLayout>
    </ScrollView>

</RelativeLayout>

