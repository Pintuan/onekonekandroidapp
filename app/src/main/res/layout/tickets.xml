                    android:layout_marginStart="155dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    tools:ignore="DuplicateIds" />


                <!-- DESCRIPTION -->
                <TextView
                    android:layout_width="wrap_content"
